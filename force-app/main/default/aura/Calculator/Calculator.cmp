<aura:component >
    <aura:attribute name="input1" type="integer"  description="for first input"/>
    <aura:attribute name="input2" type="integer"  description="for Second input"/>
    <aura:attribute name="output" type="integer"  description="for output"/>
    
    <lightning:input type="number" value="{v.input1}" label="please enter first value" required="true" />
    <lightning:input type="number" value="{v.input2}" label="please enter second value" required="true" />
    
    The output is: - {!v.output} <br/>
    <lightning:button value="Component Methods" label="Add" onClick="{!c.doAdd}" />
    <lightning:button value="Component Methods" label="Sub" onClick="{!c.doSub}" />
    <lightning:button value="Component Methods" label="Mul" onClick="{!c.doMul}" />
    <lightning:button value="Component Methods" label="Div" onClick="{!c.doDiv}" />
    
    
</aura:component>